<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             xmlns:cardv="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:measureAllChildren="true"
             android:orientation="vertical"
             tools:context=".Facebook">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:id="@+id/linear_layout"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <androidx.cardview.widget.CardView android:id="@+id/store_card"
                                               android:layout_width="match_parent"
                                               android:layout_height="330dp"
                                               android:layout_gravity="center"
                                               cardv:cardCornerRadius="6dp"
                                               android:layout_margin="5dp"
                                               android:layout_marginBottom="2dp">
                <Button
                        android:layout_width="23dp"
                        android:layout_height="13dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/hide"/>
                <Button
                        android:layout_width="30dp"
                        android:layout_height="23dp"
                        android:layout_marginTop="290dp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="220dp"
                        android:id="@+id/comment"/>
                <Button
                        android:layout_width="30dp"
                        android:layout_height="23dp"
                        android:layout_marginTop="290dp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="290dp"
                        android:id="@+id/like"/>
                <Button
                        android:layout_width="26dp"
                        android:layout_height="23dp"
                        android:layout_marginTop="290dp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="40dp"
                        android:id="@+id/share"/>
                <ImageView
                        android:layout_width="298dp"
                        android:layout_marginTop="90dp"
                        android:layout_marginLeft="30dp"
                        android:layout_height="181dp" android:id="@+id/pub_img"/>
                <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="294dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/avatar"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="230dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/name"
                        android:textColor="@android:color/black"
                />
                <TextView

                        android:layout_width="wrap_content"
                        android:layout_marginTop="290dp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="260dp"
                        android:layout_height="wrap_content" android:id="@+id/nb_like" android:textSize="16sp"
                        android:fontFamily="@font/roboto_light"/>
                <TextView

                        android:layout_width="wrap_content"
                        android:layout_marginTop="290dp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="190dp"
                        android:layout_height="wrap_content" android:id="@+id/nb_comm" android:textSize="16sp"
                        android:fontFamily="@font/roboto_light"/>
                <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="230dp"
                        android:layout_marginTop="25dp"
                        android:id="@+id/time"/>
                <TextView

                        android:layout_width="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="60dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_pub"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


</FrameLayout>