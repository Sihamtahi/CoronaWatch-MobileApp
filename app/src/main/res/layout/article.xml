<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:cardv="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:measureAllChildren="true"
             android:id="@+id/frame"
             android:background="@color/Gray_back">

    <!-- TODO: Update blank fragment layout -->




    <LinearLayout android:id="@+id/linear_layout"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical"/>

        <androidx.cardview.widget.CardView
                android:id="@+id/store_card"
                android:layout_width="match_parent"
                android:layout_height="330dp"
                app:cardBackgroundColor="@color/Gray_back"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_margin="15dp">
            <Button
                    android:layout_width="23dp"
                    android:layout_height="13dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="30dp"
                    android:visibility="visible"
                    android:id="@+id/hide"/>
            <Button
                    android:layout_width="30dp"
                    android:layout_height="23dp"
                    android:layout_marginTop="290dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="220dp"
                    android:id="@+id/comment"/>
            <EditText
                    android:layout_width="30dp"
                    android:layout_height="23dp"
                    android:layout_marginTop="290dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="90dp"
                    android:visibility="gone"
                    android:text="اضافة تعليق"
                    android:ems="40"
                    android:id="@+id/ComText"/>
            <Button
                    android:layout_width="30dp"
                    android:layout_height="23dp"
                    android:layout_marginTop="290dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="310dp"
                    android:id="@+id/like"/>
            <Button
                    android:layout_width="30dp"
                    android:layout_height="23dp"
                    android:layout_marginTop="290dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="290dp"
                    android:visibility="gone"
                    android:id="@+id/likeRed"/>
            <Button
                    android:layout_width="26dp"
                    android:layout_height="23dp"
                    android:layout_marginTop="290dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="40dp"
                    android:id="@+id/share"/>
            <ImageView
                    android:layout_width="298dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="40dp"
                    android:layout_height="181dp"
                    android:id="@+id/pub_img"/>
            <TextView

                    android:layout_width="wrap_content"
                    android:layout_marginTop="290dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="270dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/nb_like" android:textSize="16sp"
                    android:fontFamily="@font/roboto_light"/>
            <TextView

                    android:layout_width="wrap_content"
                    android:layout_marginTop="290dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="190dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/nb_comm" android:textSize="16sp"
                    android:fontFamily="@font/roboto_light"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="240dp"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_pub"/>
        </androidx.cardview.widget.CardView>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="25dp"
                  android:textSize="15sp"
                  android:gravity="right"
                  android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum.
