<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="150dp"
              android:background="@drawable/shape_sheet_button"
              android:orientation="vertical"
               app:layout_behavior="com.google.android.material.ButtomSheet">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:background="@drawable/gradient_blue"
    ></RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="30dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="اختار خيارًا :"
                android:textSize="22dp"
                android:textColor="@color/bluef_maq"
                android:layout_alignParentEnd="true" android:layout_marginEnd="15dp" android:textAlignment="textEnd"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp" android:layout_marginBottom="5dp" android:layout_alignParentBottom="true">
        <Button
                android:text="عدد الاصابات "
                android:textSize="13dp"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/malade_map_bottom"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="14dp"
                android:background="@drawable/costum_button"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="7dp"/>
        <Button
                android:text="حالات غير مؤكدة"
                android:textSize="15dp"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/suspet_map_bottom"
                android:background="@drawable/costum_button"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="14dp" android:layout_toEndOf="@+id/malade_map_bottom"
                android:layout_marginStart="6dp"/>

        <Button
                android:text="حاملي المرض"
                android:textSize="15dp"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/porteur_map_bottom"
                android:clickable="true"
                android:background="@drawable/costum_button"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="14dp" android:layout_toEndOf="@+id/suspet_map_bottom"
                android:layout_marginStart="6dp"/>
        <Button
                android:text="عدد الوفيات"
                android:textSize="15dp"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/mort_map_bottom"
                android:clickable="true"
                android:background="@drawable/costum_button"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="14dp"
                android:layout_toEndOf="@+id/porteur_map_bottom" android:layout_marginStart="6dp"/>
        <Button
                android:text="حالات الشفاء"
                android:textSize="15dp"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/guer_map_bottom"
                android:clickable="true"
                android:background="@drawable/costum_button"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="14dp"
                android:layout_toEndOf="@+id/mort_map_bottom" android:layout_marginStart="7dp"
                android:layout_alignParentEnd="true" android:layout_marginEnd="5dp"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="20dp">
        <ImageView
                android:layout_width="297dp"
                android:layout_height="20dp"
                android:src="@drawable/home_indicator"
                android:layout_alignParentBottom="true" android:layout_marginBottom="0dp"
                android:layout_alignParentEnd="true" android:layout_marginEnd="67dp"
        />
    </RelativeLayout>


</LinearLayout>
