                android:id="@+id/ComText"/>

        <Button
                android:layout_width="30dp"
                android:layout_height="23dp"
                android:layout_marginTop="290dp"
                android:layout_gravity="left"
                android:layout_marginLeft="290dp"
                android:visibility="gone"
                android:id="@+id/likeRed"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:text="Des cas Confirmés du COVID-19 à Boghni"
                android:textSize="18sp"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:id="@+id/text_pub" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView android:layout_width="395dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
                  android:textSize="15sp"
                  android:gravity="right"
