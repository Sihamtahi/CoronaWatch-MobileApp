<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:cardv="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Gray_back"
        android:measureAllChildren="true"
        android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:tabTextAppearance="@style/TextAppearance.AppCompat.Large"
            android:background="@color/Gray_back"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            android:textAlignment="center"
            android:layout_gravity="right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <FrameLayout
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/rounded_corner">

                <ImageView
                        android:id="@+id/preview"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitXY"
                        android:visibility="invisible"/>
                <TextView
                        android:id="@+id/txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="50dp"
                        android:text="@string/upphoto"
                        android:textSize="24sp"
                        android:textColor="#03A9F4"/>
                <ImageButton
                        android:id="@+id/pickImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/plus_button"
                        android:src="@drawable/add"/>
                <ImageButton
                        android:id="@+id/exit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="145dp"
                        android:layout_marginBottom="120dp"
                        android:src="@drawable/exit"
                        android:visibility="gone"
                        android:background="@drawable/exitc"/>
            </FrameLayout>
            <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/rounded_corner_white"
                    android:entries="@array/wilaya_entries" />
            <Button
                android:id="@+id/upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_corner2"
                android:backgroundTint="#03A9F4"
                android:text="الإبلاغ عن حالة "
                android:textSize="24sp"
                android:textColor="@color/White" />
            <Button
                    android:id="@+id/uploadvideo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rounded_corner_white"
                    android:backgroundTint="#03A9F4"
                    android:text="الإبلاغ عن حالة بفيديو "
                    android:textSize="24sp"
                    android:textColor="@color/White" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
